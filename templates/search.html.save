<!doctype html>
<html>
  <head>
    <title>FLASK CSV File Upload</title>
	
	<style type="text/css">

	    th:tr{
		color: blue;

	    }
	    tr:nth-of-type(2n){
		border: 1px solid black;
		padding: 1px;
		

	    }

	    td{
		padding: 8px 8px;
		border: 1px solid black;
	    }
	</style>
  </head>
  <body>

    
    <h1>Enter Transaction ID to search</h1>
    <form method="POST" action="record" >
      <p><input type="text" name="transaction_id"></p>
      <p><input type="submit" value="Submit"></p>
    </form>

<table style="margin-left: 20px;">
    
    <!-- For loop logic of jinja template -->
    {%for i in range(0, len)%}

    <!-- table rows -->


    <th>
            <tr style="color: green; ">
            <td>Order Date</td>
            <td>Dispute Register Date</td>
            <td>Order ID</td>
            <td>Transaction</td>
	    <td>Ticket Number</td>	
            </tr>
    </th>
    <tr>
	
        <td>{{rows[i][0]}}</td>
        <td>{{rows[i][1]}}</td>
        <td>{{rows[i][2]}}</td>
        <td>{{rows[i][3]}}</td>
	<td>{{rows[i][4]}}</td>
	
    </tr>
	<th >
            <tr style="color: green; padding: 20px;">
            <td>Return Type</td>
            <td>Product Name</td>
            <td>Category L1</td>
            <td>Amount</td>
	    <td>Seller name</td>

            </tr>
        </th>
    <tr>
	<td>{{rows[i][5]}}</td>
	<td>{{rows[i][6]}}</td>        
	<td>{{rows[i][7]}}</td>
        <td>{{rows[i][8]}}</td>
        <td>{{rows[i][9]}}</td>
        
    </tr>
    </tr>
	
	<th >
            <tr style="color: green; padding: 20px; ">
            <td>Dispute Reason</td>
            <td>Additional Comments</td>
            <td>Case Status</td>
            <td>Case closed date</td>
	    <td>Payment Status</td>

            </tr>
        </th>

     <tr>
	<td>{{rows[i][10]}}</td>		
	<td>{{rows[i][11]}}</td>
	<td>{{rows[i][12]}}</td>        
	<td>{{rows[i][13]}}</td>
        <td>{{rows[i][14]}}</td>
        
        
    </tr>

	
    {%endfor%}

    

    </table>
	
	
  </body>
</html>
